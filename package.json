{
  "name": "@knowark/validarkjs",
  "version": "0.3.2",
  "description": "Simple Data Validation Library",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knowark/validarkjs.git"
  },
  "keywords": [
    "Validation",
    "Schema"
  ],
  "author": "Knowark",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/knowark/validarkjs/issues"
  },
  "homepage": "https://github.com/knowark/validarkjs#readme",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/lib/**"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3"
  }
}
